@using RWAEShopWebApp.ViewModels
@model LogViewModel

@{
    ViewData["Title"] = "Log Details";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="bi bi-info-circle-fill me-2"></i>
                    <h4 class="mb-0 fw-bold">Log Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-semibold text-secondary">Message:</dt>
                        <dd class="col-sm-8">@Model.Message</dd>

                        <dt class="col-sm-4 fw-semibold text-secondary">Level:</dt>
                        <dd class="col-sm-8">@Model.Level</dd>

                        <dt class="col-sm-4 fw-semibold text-secondary">Timestamp:</dt>
                        <dd class="col-sm-8">@Model.Timestamp.ToString("g")</dd>
                    </dl>
                </div>
                <div class="card-footer bg-white border-0 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-link text-decoration-none">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
