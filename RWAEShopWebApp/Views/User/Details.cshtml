@using RWAEShopWebApp.ViewModels
@model UserDetailsPageVM

<div class="container mt-4 mb-5">
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h2 class="card-title fw-bold text-primary mb-3">User Details</h2>
            <dl class="row mb-0">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.User.Name @Model.User.LastName</dd>
                <dt class="col-sm-3">Username</dt>
                <dd class="col-sm-9">@Model.User.Username</dd>
                <dt class="col-sm-3">Role</dt>
                <dd class="col-sm-9">@Model.User.RoleName</dd>
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.User.Email</dd>
            </dl>
        </div>
    </div>

    <h3 class="fw-semibold text-secondary mb-3">User Orders</h3>

    @if (Model.Orders.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var order in Model.Orders)
            {
                <div class="col">
                    <div class="card border shadow-sm h-100">
                        <div class="card-header d-flex justify-content-between align-items-center bg-light">
                            <span class="fw-bold text-primary">Order #@order.OrderId</span>
                            <span class="small text-muted">@order.OrderDate.ToString("g")</span>
                        </div>
                        <div class="card-body p-3">
                            <div class="mb-2"><strong>Products:</strong></div>
                            <div class="table-responsive">
                                <table class="table table-sm align-middle mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Name</th>
                                            <th class="text-center">Quantity</th>
                                            <th class="text-end">Unit Price</th>
                                            <th class="text-end">Subtotal</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in order.OrderItems)
                                        {
                                            <tr>
                                                <td>@item.Name</td>
                                                <td class="text-center">@item.Quantity</td>
                                                <td class="text-end">@item.Price.ToString("0.00") €</td>
                                                <td class="text-end">@((item.Quantity * item.Price).ToString("0.00")) €</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-0 d-flex justify-content-between align-items-center">
                            <span class="fw-bold">Total:</span>
                            <span class="h5 text-success mb-0">@order.TotalAmount.ToString("0.00") €</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info mt-3">This user has no orders.</div>
    }
</div>
