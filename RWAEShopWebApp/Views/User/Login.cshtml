@using RWAEShopWebApp.ViewModels
@model UserLoginVM

@{
    ViewData["Title"] = "Login";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-body">
                    <div class="text-center mb-3">
                        <img src="~/img/akuza.jpg" class="img-fluid" alt="Akuža logo" style="max-width: 110px;" />
                    </div>
                    <h2 class="card-title text-center mb-4 text-primary">AKUŽA LOGIN</h2>
                    <hr />
                    <form asp-action="Login">
                        <input type="hidden" asp-for="ReturnUrl" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Username" class="form-label"></label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-block">LOG IN</button>
                        </div>
                    </form>

                    <div class="mt-3 text-center">
                        <a asp-controller="User" asp-action="Register" class="btn btn-outline-primary btn-sm">
                            Don't have account? Sing up
                        </a>
                    </div>
                    <div class="mt-2 text-center">
                        <a asp-controller="Home" asp-action="Index" class="text-secondary">Back Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
