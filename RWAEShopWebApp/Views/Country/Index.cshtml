@using RWAEShopWebApp.ViewModels
@model IEnumerable<CountryVM>

@{
    ViewData["Title"] = "Countries";
}

<div class="container py-5" style="max-width:600px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0" style="letter-spacing:1px;">Countries</h2>
        <a asp-action="Create" class="btn btn-success px-4 fw-bold shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Create New
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 60%;">Name</th>
                        <th class="text-center" style="width: 20%;">Edit</th>
                        <th class="text-center" style="width: 20%;">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold fs-5">@item.Name</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.IdCountry"
                                   class="btn btn-outline-primary btn-sm px-4 py-2 me-md-1 mb-1 mb-md-0">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                            </td>
                            <td class="text-center">
                                <a asp-action="Delete" asp-route-id="@item.IdCountry"
                                   class="btn btn-outline-danger btn-sm px-4 py-2 ms-md-1">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

