@using RWAEShopWebApp.ViewModels
@model ProductVM

@{
    ViewData["Title"] = "Edit";
}

<div class="container py-5" style="max-width:650px;">
    <div class="card border-0 shadow-lg">
        <div class="card-body p-4">
            <h2 class="fw-bold text-primary mb-4" style="letter-spacing:1px;">Edit Product</h2>

            <form asp-action="Edit" method="post" enctype="multipart/form-data" autocomplete="off">
                <div asp-validation-summary="All" class="alert alert-danger small"></div>
                <input type="hidden" asp-for="IdProduct" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control form-control-lg" autocomplete="off" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ProductDescription" class="form-label fw-semibold"></label>
                    <textarea asp-for="ProductDescription" class="form-control form-control-lg" rows="2" autocomplete="off"></textarea>
                    <span asp-validation-for="ProductDescription" class="text-danger small"></span>
                </div>
                <div class="row gx-3">
                    <div class="col-sm-6 mb-3">
                        <label asp-for="Price" class="form-label fw-semibold"></label>
                        <input asp-for="Price" class="form-control form-control-lg" type="number" step="0.01" min="0" autocomplete="off" />
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <label asp-for="Quantity" class="form-label fw-semibold"></label>
                        <input asp-for="Quantity" class="form-control form-control-lg" min="0" autocomplete="off" />
                        <span asp-validation-for="Quantity" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Prikaz trenutne slike ako postoji -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Current Image</label><br />
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="Product image" class="img-thumbnail shadow-sm mb-2" style="max-width:150px; max-height:150px; object-fit:cover;" />
                    }
                    else
                    {
                        <em class="text-muted">No image uploaded.</em>
                    }
                </div>

                <!-- Polje za upload nove slike-->
                <div class="mb-3">
                    <label asp-for="ImageFile" class="form-label fw-semibold">Upload New Image</label>
                    <input asp-for="ImageFile" class="form-control form-control-lg" type="file" accept="image/*" />
                    <span asp-validation-for="ImageFile" class="text-danger small"></span>
                    <small class="form-text text-muted">Leave empty to keep current image.</small>
                </div>

                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label fw-semibold"></label>
                    <select asp-for="CategoryId" class="form-select form-select-lg" asp-items="ViewBag.CategoryId">
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-semibold">Countries</label>
                    @Html.ListBoxFor(model => model.CountryNames, (MultiSelectList)ViewBag.Countries, new { @class = "form-select form-select-lg", size = 4 })
                    <span asp-validation-for="CountryNames" class="text-danger small"></span>
                </div>

                <div class="d-flex align-items-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg px-5 fw-bold me-2">Save</button>
                    <a asp-action="Index" class="btn btn-link ms-2">Back to Products</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
