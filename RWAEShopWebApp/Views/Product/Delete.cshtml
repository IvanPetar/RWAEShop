@using RWAEShopWebApp.ViewModels
@model ProductVM

@{
    ViewData["Title"] = "Delete";
}

<div class="container py-5" style="max-width:600px;">
    <div class="card border-0 shadow-lg">
        <div class="card-body p-4">
            <h2 class="fw-bold text-danger mb-4" style="letter-spacing:1px;">Delete Product</h2>

            <div class="alert alert-warning fw-semibold mb-4">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                Are you sure you want to delete this product: <span class="fw-bold text-primary">@Model.Name</span>?
            </div>

            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="mb-4 text-center">
                    <img src="@Model.ImageUrl" alt="Product image" class="img-thumbnail shadow-sm" style="max-width:140px; max-height:140px; object-fit:cover;" />
                </div>
            }

            <table class="table table-bordered align-middle bg-white mb-4">
                <tbody>
                    <tr>
                        <th style="width: 30%;">Name</th>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>@Model.ProductDescription</td>
                    </tr>
                    <tr>
                        <th>Price</th>
                        <td>@Model.Price.ToString("0.00") €</td>
                    </tr>
                    <tr>
                        <th>Quantity</th>
                        <td>@Model.Quantity</td>
                    </tr>
                    <tr>
                        <th>Category</th>
                        <td>@Model.CategoryName</td>
                    </tr>
                </tbody>
            </table>

            <form asp-action="Delete" id="deleteForm" method="post">
                <input type="hidden" asp-for="IdProduct" />
                <div class="d-flex align-items-center">
                    <button type="submit" class="btn btn-danger btn-lg fw-bold px-4 me-3">
                        <i class="bi bi-trash me-1"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Back to Products</a>
                </div>
            </form>
        </div>
    </div>
</div>


<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

<!-- Modal for confirmation for delete IsAny ProductInOrder -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalLabel">Product is in orders</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        This product exists in at least one order. Are you sure you want to delete it?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Yes, Delete</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#deleteForm').on('submit', function (e) {
                e.preventDefault();

                var productId = @Model.IdProduct;

                $.get('/Product/CheckProductInOrder', { id: productId }, function (data) {
                    if (data.inOrder) {
                        // send modal if product is in Order
                        var modal = new bootstrap.Modal(document.getElementById('confirmDeleteModal'));
                        modal.show();

                        // Admin when confirm send form
                        $('#confirmDeleteBtn').off('click').on('click', function () {
                            modal.hide();
                            $('#deleteForm')[0].submit();
                        });
                    } else {
                        // else send right away form
                        $('#deleteForm')[0].submit();
                    }
                });
            });
        });
    </script>
}