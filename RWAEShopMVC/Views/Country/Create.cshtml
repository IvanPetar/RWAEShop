@using RWAEShopMVC.ViewModels
@model CountryVM

@{
    ViewData["Title"] = "Create";
}

<div class="container py-5" style="max-width:430px;">
    <div class="card border-0 shadow-lg">
        <div class="card-body p-4">
            <h2 class="fw-bold text-primary mb-4" style="letter-spacing:1px;">Add Country</h2>

            <form asp-action="Create" autocomplete="off">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>
                <div class="mb-4">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control form-control-lg" autocomplete="off" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary btn-lg px-4 fw-bold">Create</button>
                    <a asp-action="Index" class="btn btn-link ms-3">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
