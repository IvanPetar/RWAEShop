@model RWAEShopMVC.ViewModels.OrderVM

<div class="container mt-4">
    <h2 class="fw-bold text-primary mb-4">My Cart</h2>

    @if (Model?.OrderItems == null || !Model.OrderItems.Any())
    {
        <div class="alert alert-info shadow-sm py-4 text-center fs-5">
            <i class="bi bi-cart-x fs-3 me-2"></i>
            Your cart is empty.
        </div>
    }
    else
    {
        <div class="bg-light rounded p-3 mb-3">
            <div class="row">
                <div class="col-md-6">
                    <strong>User:</strong> @User.Identity.Name
                </div>
                <div class="col-md-6 text-md-end">
                    <strong>Order date:</strong> @Model.OrderDate.ToString("g")
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table align-middle table-bordered table-hover bg-white shadow-sm">
                <thead class="table-light">
                    <tr>
                        <th style="width:80px;">Image</th>
                        <th>Product</th>
                        <th style="width:130px;">Quantity</th>
                        <th style="width:120px;">Price<br />(€/unit)</th>
                        <th style="width:120px;">Subtotal</th>
                        <th style="width:110px;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderItems)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" class="img-fluid border rounded" style="max-width:70px; max-height:70px;" alt="Product image" />
                                }
                                else
                                {
                                    <img src="~/img/no-image.png" class="img-fluid border rounded" style="max-width:70px; max-height:70px;" alt="No image" />
                                }
                            </td>
                            <td class="align-middle fw-semibold">@item.Name</td>
                            <td>
                                <form asp-action="UpdateQuantity" method="post" class="d-flex align-items-center gap-2">
                                    <input type="hidden" name="orderId" value="@Model.OrderId" />
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control form-control-sm" style="width:70px;" />
                                    <button type="submit" class="btn btn-outline-primary btn-sm px-2">Update</button>
                                </form>
                            </td>
                            <td class="align-middle">@item.Price.ToString("0.00") €</td>
                            <td class="align-middle fw-semibold">@((item.Quantity * item.Price).ToString("0.00")) €</td>
                            <td>
                                <form asp-action="RemoveItem" method="post">
                                    <input type="hidden" name="orderId" value="@Model.OrderId" />
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm px-2">Remove</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="row mt-3 align-items-center">
            <div class="col-md-6 mb-2 mb-md-0">
                <strong>Total:</strong>
                <span class="h4 text-success ms-2">@Model.TotalAmount.ToString("0.00") €</span>
            </div>
            <div class="col-md-6 text-md-end">
                <form asp-action="ClearCart" asp-controller="Order" method="post" class="d-inline-block">
                    <input type="hidden" name="orderId" value="@Model.OrderId" />
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash me-1"></i> Clear Cart
                    </button>
                </form>
            </div>
        </div>
    }
</div>
