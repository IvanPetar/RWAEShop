@model IEnumerable<RWAEShopMVC.ViewModels.ProductVM>
@{
    ViewData["Title"] = "Shop";
}
<h2>Products</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().ProductDescription)</th>
            <th>@Html.DisplayNameFor(model => model.First().Price)</th>
            <th>@Html.DisplayNameFor(model => model.First().CategoryName)</th>
            <th class="text-center">Quantity</th>
            <th class="text-center">Details</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="Image" style="max-width:80px; max-height:80px;" />
                    }
                </td>
                <td>@item.Name</td>
                <td>@item.ProductDescription</td>
                <td>@item.Price.ToString("0.00") €</td>
                <td>@item.CategoryName</td>
                <td class="align-middle text-center">
                    <!-- Ovo je stupac Details -->
                    <a class="btn btn-primary btn-sm w-100" asp-action="Details" asp-route-id="@item.IdProduct">
                        Details
                    </a>
                </td>
                <td class="align-middle text-center">
                    <!-- Ovo je stupac Actions -->
                    <form asp-controller="Order" asp-action="AddToCart" method="post" class="d-flex flex-column align-items-center">
                        <input type="hidden" name="productId" value="@item.IdProduct" />
                        <input type="number" name="quantity" value="0" min="0" class="form-control mb-2" style="width: 70px;" />
                        <button type="submit" class="btn btn-success btn-sm w-100">Add to Cart</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
