@using RWAEShopMVC.ViewModels
@model CategoryVM

@{
    ViewData["Title"] = "Delete";
}

<div class="container py-5" style="max-width:430px;">
    <div class="card border-0 shadow-lg">
        <div class="card-body p-4">
            <h2 class="fw-bold text-danger mb-4" style="letter-spacing:1px;">Delete Category</h2>
            <div class="alert alert-warning fw-semibold mb-4">
                Are you sure you want to delete this category: <span class="fw-bold text-primary">@Model.Name</span>?
            </div>

            <table class="table table-bordered bg-white mb-4">
                <tbody>
                    <tr>
                        <th style="width: 35%;">Name</th>
                        <td>@Model.Name</td>
                    </tr>
                </tbody>
            </table>

            <form asp-action="Delete">
                <input type="hidden" asp-for="IdCategory" />
                <div class="d-flex align-items-center">
                    <button type="submit" class="btn btn-danger btn-lg px-4 fw-bold me-3">
                        Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Back to Categories</a>
                </div>
            </form>
        </div>
    </div>
</div>
